#include <bits/stdc++.h>

using namespace std;


int staircase(int n, int* dp) {
    if (n < 0) {
        return 0;
    }
    if (n == 1 || n == 0) {
        return 1;
    }
    
    if (dp[n] != -1) {
        return dp[n];
    }
    
    dp[n] = staircase(n-1, dp) + staircase(n-2, dp) + staircase(n-3, dp);
    return dp[n];
}

int main()
{
    int n = 4;
    int* dp = new int[5];
    for (int i=0; i<5; i++) {
        dp[i] = -1;
    }
    
    cout<<staircase(n, dp);
    return 0;
}
